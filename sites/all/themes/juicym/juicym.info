name = juicym
description = 'A starter mobile_jquery theme'
core = '7.x'
version = '7.x-2.0-beta1'
base theme = 'mobile_jquery'

;scripts[] = 'js/jquery.roundabout.min.js'
;scripts[] = 'js/jquery.roundabout-shapes.min.js'
;scripts[] = 'js/juicym.js'

stylesheets[all][] = 'css/theatre.css'
stylesheets[all][] = 'css/jquery-mobile-fluid960.min.css'
stylesheets[all][] = 'css/juicym.css'

regions[header] = 'Header'
regions[highlighted] = 'Highlighted'
regions[content] = 'Content'
regions[sidebar_first] = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer] = 'Footer'

;Plugins
plugins[panels][styles] = panels/styles
plugins[panels][layouts] = panels/layouts

;Settings
settings[rebuild_registry] = 0
settings[use_global] = 1
settings[viewport] = 1
settings[viewport_width] = 'device-width'
settings[viewport_initial_scale] = 1
settings[viewport_min_scale] = 1
settings[viewport_max_scale] = 1
settings[viewport_user_scalable] = ''
settings[global_icon] = 'arrow-r'
settings[global_inset] = 'true'
settings[global_theme] = 'a'
settings[global_spliticon] = 'plus'
settings[global_header_data_position] = 'inline'
settings[global_footer_data_position] = 'inline'
settings[list_item_icon] = 'arrow-r'
settings[list_item_inset] = 'true'
settings[list_item_theme] = 'a'
settings[list_item_dividertheme] = 'a'
settings[list_item_counttheme] = 'a'
settings[list_item_splittheme] = 'a'
settings[list_item_spliticon] = 'plus'
settings[menu_item_icon] = 'arrow-r'
settings[menu_item_inset] = 'true'
settings[menu_item_theme] = 'a'
settings[menu_item_dividertheme] = 'a'
settings[menu_item_counttheme] = 'a'
settings[menu_item_splittheme] = 'a'
settings[menu_item_spliticon] = 'plus'
settings[header_data_theme] = 'a'
settings[header_data_position] = 'inline'
settings[content_data_theme] = 'a'
settings[footer_data_theme] = 'a'
settings[footer_data_position] = 'inline'

